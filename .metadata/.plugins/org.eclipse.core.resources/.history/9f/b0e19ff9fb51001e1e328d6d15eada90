package day20;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.HashMap;

public class BufferedReader03 {

	public static void main(String[] args) throws IOException {	
//		FileInputStream fis = new FileInputStream(new File("out.txt")); //파일 불러오기
//		int bufSize = fis.available(); //읽어올 수 있는 byte의 수를 반환
//		byte[] buf = new byte[bufSize]; //bufSize 만큼의 byte 배열을 선언
//		fis.read(buf); //읽고
//		System.out.println(new String(buf)); //출력
//		fis.close(); //닫아주기!
		BufferedReader br = new BufferedReader(new FileReader("out.txt"));
		while(true) {
			String line = br.readLine(); //한 라인 읽어오기
			if(line == null) { //더이상 읽을 라인이 없다면
				break;
			}
			System.out.println(line);
		}
		br.close();
		
		HashMap<String, Integer> map = new HashMap<String, Integer>();
		
	}
	
	
	
	
	
	
	
	
	
	
	
}




