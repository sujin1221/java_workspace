class FoodManager{
	//멤버변수: ArrayList 메뉴, ArrayList 가격
	//그 외 필요한 멤버변수는 선택
	List<String> menu = new ArrayList<String>();
	List<Integer> price = new ArrayList<Integer>();
	int sum = 0; //add
	
	//프린터
	public void print() {
		System.out.println("---menu---");
		System.out.println("1.햄버거: 10000원");
		System.out.println("2.피자: 10000원");
		System.out.println("3.음료: 3000원");
		System.out.println("4.과자: 2000원");
		System.out.println("5.사탕: 1000원");
		System.out.println("6.프로그램 종료");
	}
	//sale
	public void sale(int m, int p) {
	menu.add("햄버거");
	menu.add("피자");
	menu.add("음료");
	menu.add("과자");
	menu.add("사탕");
	
	price.add(10000);
	price.add(10000);
	price.add(3000);
	price.add(2000);
	price.add(1000);
	
	sum = price.get(m-1)*p;
	
	
	
	
	
	

}
	
   
	
	
	
	
	
	
	
	
	
	
	
	
