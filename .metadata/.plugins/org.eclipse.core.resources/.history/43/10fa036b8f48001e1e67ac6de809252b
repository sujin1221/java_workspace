package studentmanager;

import java.util.Scanner;

public class Program_Main implements program {
	int cnt1 = 0; 
	Student[] s = new Student[5];
	public static void main(String[] args) {
		/* 메뉴를 출력하여 사용자로부터 어떤 기능을 수행할 것인지 처리
		 * 1. 학생 등록 | 2. 학생 검색 | 3. 학생 리스트 | 4. 수강 신청 | 5. 수강 철회 | 6. 종료
		 * 
		 * */	
		Scanner scan = new Scanner(System.in);
		Program_Main pm = new Program_Main();
		
		int subject = 0;
		do {
		System.out.println("1. 학생 등록 | 2. 학생 검색 | 3. 학생 리스트 | 4. 수강 신청 | 5. 수강 철회 | 6. 종료");	
		subject = scan.nextInt();	
		switch(subject) {
		case 1 :
			System.out.println("새로운 학생을 등록합니다."); 
			pm.insertStudent(scan);
			break;
		case 2 :
			System.out.println("검색할 학생의 이름을 입력하세요");
	         pm.searchStudent(scan);
			break;
		case 3 : System.out.println("학생 리스트를 출력합니다."); 
		pm.printStudent();
		break;
		case 4 : System.out.println("새로운 수강을 신청합니다."); 
		pm.registerSubject(scan);
		break;
		case 5 : System.out.println("신청한 수강을 철회합니다."); 
		
		break;
		case 6 : System.out.println("종료합니다"); 		
		break;	
		default: System.out.println("===잘못된 메뉴를 선택했습니다!===");
		}
		} while(subject != 6); 
		System.out.println("프로그램 종료");
		
		

	}

	@Override
	public void printStudent() {
		for(int j=0;j<cnt1;j++) {
			System.out.println(s[j].getName());
		}		
	}

	@Override
	public void insertStudent(Scanner scan) {
	System.out.println("학생의 이름을 입력해주세요.");
	s[cnt1] = new Student();
	s[cnt1].setName(scan.next());
	cnt1++;
	System.out.println("등록이 완료되었습니다!");
	}

	@Override
	public void searchStudent(Scanner scan) {
		System.out.println("학생의 이름을 입력해주세요.");
		String name = scan.next();
		for(int i=0;i<cnt1;i++) {
			if(name.equals(s[i].getName())) {
				s[i].printInfo();
			} else { 
				System.out.println("학생 정보가 없습니다.");
			}
		}
	}
	@Override
	public void registerSubject(Scanner scan) {
		System.out.println("학생의 이름을 입력해주세요.");
		String name = scan.next();
		for(int i=0;i<cnt1;i++) {
		if(name.equals(s[i].getName())) {
			s[i].insertCourse();
		} else { 
			System.out.println("학생 정보가 없습니다.");
		}
		}	
	}
	@Override
	public void deleteSubject(Scanner scan) {
		cnt1++;
		
	}
}
