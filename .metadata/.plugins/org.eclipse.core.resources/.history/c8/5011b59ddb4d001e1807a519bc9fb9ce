package day16;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;
/* --메뉴판--
 * 1.햄버거:7000
 * 2.피자:15000
 * 3.음료수:2000
 * 4.과자:1000
 * 5.사탕:500
 * 6.프로그램 종료
 *
 * 메뉴선택 > 1
 * 수량 > 2
 * => 1번 햄버거 2개 주문
 * 주문을 끝내시려면 0을 눌러주세요. 1
 * 메뉴선택 > 3
 * 수량 > 2
 * => 3번 음료 2개 주문
 * 주문을 끝내시려면 0을 눌러주세요. 0
 *
 * --선택한 메뉴
 * 1.햄버거 2개
 * 2.음료 2개
 * 총 지불금액 000원
 *
 * /멤버변수 ArrayList 메뉴, ArrayList 가격
	//그외 필요한 멤버변수는 선택
	
	//메서드
	//출력 : 결과출력, 메뉴출력, add(), sale()
 * */
public class List02 {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		FoodManager f = new FoodManager();
		int menu = 0;
		do { //사용자가 종료를 할때까지 반복해야하므로 do~while문을 이용
			f.menulist(); //메뉴판 출력
			menu = scan.nextInt(); //메뉴선택
			switch(menu) { //1~5까지 같은 값 출력
			case 1: case 2: case 3: case 4: case 5:
				f.add(menu, scan); break; //메뉴,수량,주문금액 출력
			case 6: System.out.println("프로그램을 종료합니다."); break;		
			default: System.out.println("메뉴를 다시 확인해주시기 바랍니다."); //1~6 사이의 수를 입력했을시
			}
		} while(menu != 6); //만약 메뉴가 6이라면 아래(false), 6이 아니라면(true) 위로
			System.out.println("주문을 종료합니다.");
		}
}
class FoodManager{
	//멤버변수
	private List<String> menu = new ArrayList<>(); //메뉴
	private List<Integer> price = new ArrayList<>(); //가격
	private List<String> menuNum = new ArrayList<>(); //메뉴넘버
	private List<Integer> count = new ArrayList<>(); //개수
	private int cnt; //카운트용
	private int sum; //합계용
	//기본값 설정
	public FoodManager() {
		menu.add("메뉴1");
		menu.add("메뉴2");
		menu.add("메뉴3");
		menu.add("메뉴4");
		menu.add("메뉴5");
		menu.add("메뉴6");
		
		price.add(1000);
		price.add(2000);
		price.add(3000);
		price.add(4000);
		price.add(5000);
		price.add(6000);	
	}
	//생성자
    public FoodManager(List<String> menu, List<Integer> price, List<String> menuNum, List<Integer> count, int cnt,int sum) {
		//super();
		this.menu = menu;
		this.price = price;
		this.menuNum = menuNum;
		this.count = count;
		this.cnt = cnt;
		this.sum = sum;
	}
	//메뉴판 출력 메서드
	public void menulist() {
		System.out.println("--menu--");
		System.out.println("1. 메뉴1");
		System.out.println("2. 메뉴2");
		System.out.println("3. 메뉴3");
		System.out.println("4. 메뉴4");
		System.out.println("5. 메뉴5");
		System.out.println("6. 메뉴6");
		System.out.println("메뉴 입력>");
	}
	//총 주문정보 출력해주는 메서드
	public void total() {
		System.out.println("총 주문 정보> ");
		for(int i=0;i<cnt;i++) { //내가 입력한 값까지 범위 지정 후
			System.out.println(i+1+"."+menu.get(i)+" | "+price.get(i)+"원"); //get을 이용해서 메뉴값과 가격값을 불러와주기
		}
		System.out.println("결제하실 금액은 "+sum+"원입니다."); //총주문금액출력
	}
	//개수 추가
	//0을 누르면 주문이 종료되도록 설정
		public void add(int menu, Scanner scan) {
			System.out.println("수량> ");
			int a = scan.nextInt(); //수량입력
			sale(menu, a); //메뉴와 수량을 입력하면 카운트되도록 설정
			System.out.println("0을 누르면 주문이 종료됩니다.");
			int a1 = scan.nextInt(); //입력받고
			switch(a1) { //내가 입력한 값이 0이라면 '총 주문정보'가 출력되도록 설정
			case 0: total(); break;
			}	
		}
	//내가 주문하고자하는 메뉴와 수량을 출력하는 메서드
	//개수 카운트
	private void sale(int menu2, int a) {
		//menu2 가 1부터 시작하므로, 인덱스 0값을 출력하려면 -1을 해줘야함!
		System.out.println(menu.get(menu2-1)+"을 "+a+"개 주문하셨습니다."); //내가 주문한 메뉴와 수량 출력
		menuNum.add(menu.get(menu2-1)); //내가 주문한 메뉴 추가
		count.add(a); //내가 주문한 수량 추가
		//cnt++; //입력한 값을 모두 저장
		sum += price.get(menu2-1)*a; //총 주문금액 = (내가 입력한 메뉴의 인덱스 0의 값부터~ * 내가 주문한 개수)모두를 더해준 값
	}
}