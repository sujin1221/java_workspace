package Lotto;

public class LottoMain{

	public static void main(String[] args) {
		int menu = 0;
		LottoManager l = new LottoManager();
		do {
		System.out.println("----MENU---");
		System.out.println("1.로또번호 생성(수동)");
		System.out.println("2.로또번호 생성(자동)");
		System.out.println("3.당첨번호 생성(자동)");
		System.out.println("4.당첨번호 내역 확인");
		System.out.println("5.당첨번호 리스트 확인");
		System.out.println("6.종료");
		switch(menu) {
		case 1:
			
			break;
		case 2:
			l.creatLottoAuto();
			break;
		case 3:
			l.insertLottoAuto();
			break;
		case 4:
			l.lottoRank(null, null);
			break;
		case 5:
			
			break;
		case 6: System.out.println("종료합니다."); break;	
		}
		

	} while(menu != 6);
		System.out.println("프로그램을 종료합니다.");

}
}