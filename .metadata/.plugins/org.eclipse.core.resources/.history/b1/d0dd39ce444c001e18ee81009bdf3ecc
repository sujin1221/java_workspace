package day14;
/*  5.VIP등급
 * 제품을 구매할때 20% 할인
 * 보너스 포인트 5% 적립
 * 전담상담사를 갖는다.(int agentID)
 * saleRatio 추가해주기
 * */

public class VIP extends Customer{
	//멤버변수
	public int agentID;
	public int saleRatio;
	//생성자
	public VIP(int customerID, String customerName, int agentID) {
		super(customerID, customerName); //부모에서 불러오기
		this.agentID = agentID;
		customerGrade = "VIP";
		saleRatio = 0.2;
		bonusRatio = 0.05;
	}
	//보너스 적립 계산 메서드 VIP등급용으로 재정의
	public void calcPrice(int price) {
		bonusRatio += bonusPoint*price;
		return bonusRatio - (int)(saleRatio*price);   
	} 	
		
		
		
		
		
		
		
		
		
	
	 
	
	

}
