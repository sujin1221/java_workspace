package day15;

public class Exception03 {

	public static void main(String[] args) {
		/* 자주 발생하는 예외 코드
		 * */
		//ArithmeticException: by zero
		//System.out.println(1/0);
		
		//ArrayIndexOutOfBoundsException: 배열의 번지가 넘어갔을때 발생하는 에러
		int arr[] = new int[5];
		arr[6] = 1;
		P p = new C();
		C c = (C)p; //

	}

}
class P{
	int num = 10;
}
class C extends P{
	int num = 100;
}