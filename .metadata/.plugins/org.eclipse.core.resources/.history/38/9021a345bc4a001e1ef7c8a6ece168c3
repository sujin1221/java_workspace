package studentmanager;

public class student_연습 {
	//멤버변수
	private int classNum = 12345; //학번
	private String studentName = "이름"; //학생 이름
	private String personNum = "000000-0000000"; //주민
	private String hakbu = "학부"; //학부
	private String major = "학과"; //학과
	private Subject[] s
	//뱅= new Subject[5]; //과목 5개를 배열로 저장
	int cnt = 0; //변수 카운트용
	//생성자
	public student_연습() {}
	public student_연습(String studentName) {
		this.studentName = studentName;
	}
	public student_연습(int classNum, String studentName, String personNum, String hakbu, String major) {
		super();
		this.classNum = classNum;
		this.studentName = studentName;
		this.personNum = personNum;
		this.hakbu = hakbu;
		this.major = major;
	}
	//학생정보 출력 메서드
	public void stdPrint() {
		System.out.println("학생명(학번):"+studentName+"("+classNum+")");
		System.out.println("학생명(학과):"+studentName+"("+major+")");
	}
	//수강과목 출력 메서드
	public void subPrint() {
		//수강과목 없을 경우:
		if(cnt==0) {
			System.out.println("수강중인 과목이 없습니다.");
		}
		//수강과목이 있을 경우:
		for(int i=0;i<cnt;i++) {
			//toString을 이용하여 출력
			System.out.println(s[i]);	
			System.out.println(s[i].toString());
		}		
	}

	//수강과목 추가 신청 메서드 => s배열 값이 들어가는 것.
